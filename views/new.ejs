<%- include("./partials/header") %>

<div class="card" >
  <div class="card-body">
    <h3 class="card-title">New Cluck</h3>
    <form action="/new" method="POST" class="card-text">
      <div class="form-group">
        <label >Content</label>
        <textarea class="form-control" name="content" rows="4"></textarea>
      </div>
      <div class="form-group">
        <label>image url</label>
        <input type="text" class="form-control" name="url" placeholder="image url">
      </div>
      <div class="form-group p-0 m-0 mr-0">
        <input type="submit" class="btn btn-info col-6 m-0 float-right" value="Cluck!">
      </div>
      
    </form>
  </div>
</div>

